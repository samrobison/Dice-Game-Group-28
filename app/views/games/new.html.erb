<% unless current_user %>
  <% redirect_to root_path%>
<%end%>

<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>

<h1>Create Game</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@game) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
<br>
      <label>How Many Other Players </label>
      <%= f.select :players, (1..7) %>
<br>
       <label>Human Player Names</label>
       separate names with ,'s (do not include yourself, and enter other human(s)' email(s)
        <%= text_field_tag :humans, nil, class: "form-control" %>
<br>
      <%= f.submit "Start Game", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
